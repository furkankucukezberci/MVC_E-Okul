
@using OgrenciNotMVC_2.Models.EntityFramework
@model List<TBLDERSLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var Drslr in Model)
        {
            <tr>
                <td>@Drslr.DERSID</td>
                <td>@Drslr.DERSAD</td>
                <td>
                    <a href="/Home/Sil/@Drslr.DERSID" class="btn btn-danger">Sil</a>
                    <a href="/Home/DersGetir/@Drslr.DERSID" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Home/YeniDers" class="btn btn-primary">Yeni Ders Kayıt</a>